            /*获取登陆用户信息*/
            var user = websessionStorage.getItem("user");
            if (user != null && user != undefined) {
                /*页面右上角填入用户名*/
                $("#loginAdmin").text(user.username);
                /*页面右上角设置头像*/
                $("#loginAdminIMG").attr("src", user.img);
            }


            /*注销点击事件*/
